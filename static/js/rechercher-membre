function checkField(inputId){
    let field = document.getElementById(inputId);
    let fieldValue = field.value;
    if(fieldValue == "" || fieldValue == null){
        field.style.borderColor = 'red';
        return false;
    }else{
        return true;
    }
}

function checkForm(){
    let value1 =  checkField("search_input");
    let value2 = checkField("search_data");
    return value1 && value2;
}

function getResults(){
    $(document).ready(function(){
        $("Rechercher").click(function(){
             $.ajax({url: "/rechercher-membre/" + document.getElementById("search_data").value, success: function(result){
                    $("result").replaceWith(result);
                }});
            });
        });
}